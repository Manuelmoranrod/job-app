doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous')
    
    link(rel='stylesheet' href='profile.css')
    title Profile
  body
    
    .encabezado
      p.logt Logout
    .casa
      i.fas.fa-home.fa-2x
    .letras Perfil
    .content.actual
        p.dactual Datos actuales
        label(for='name') Name
        input(type='text' name='name' id='nameDB' required)
        label(for='email') Email
        input(type='email' name='email' id='emailDB' required)
    .content.paraeditar
      form(action='/api/user' method='POST' novalidate class="")
        p.dnuevo Datos nuevos
        label(for='name' class="one") Name
        input(type='text' name='name' id='nameEdit' required)
        
        label(for='email' class="two") Email
        input(type='email' name='email' id='emailEdit' required)
 
        input(type='submit', value='Edit' id='edit_button')
        

  include ./menu-bar.pug
  
           


  